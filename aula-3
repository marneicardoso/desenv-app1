import java.util.Scanner;

/*
Escreva um algoritmo que receba dois valores, some e mostre o resultado.
*/

public class Calculadora {

	public static void main(String[] args) {
		// :: Programação Estruturada (Procedural) ::
		
		// 1. Declaração das Variáveis
		double num1;
		double num2;
		double resultado;
		
		// Cria um objeto da classe Scanner
		Scanner input = new Scanner(System.in);
		
		// 2. Atribuição e valores (ENTRADA)
		System.out.println("Informe o primeiro valor: ");
		num1 = input.nextDouble();
		
		System.out.println("Informe o segundo valor: ");
		num2 = input.nextDouble();
		
		// 3. Cálculos (PROCESSAMENTO)
		resultado = num1 + num2; // + - * /
		
		// 4. Mostra o resultado na tela (SAÍDA)
		System.out.println("O resultado é: " + resultado);
	}
}

