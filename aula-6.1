import javax.swing.JOptionPane;

public class Tela {

	// Atributos (variáveis)
	public double tamanho;
	private String marca;
	
	// Métodos
	public String input() {
		return JOptionPane.showInputDialog("Informe um número");
	}
	
	public void output(double resultado) {
		JOptionPane.showMessageDialog(null, resultado);
	}
}



public class Main {

	public static void main(String[] args) {
		
		// 1. Declaração das variáveis
		Tela tela = new Tela();
		double valor1, valor2, resultado;
		
		// 2. Atribuição de valores (ENTRADA)
		String valor = tela.input();
		valor1 = Double.parseDouble(valor);
		
		valor2 = Double.parseDouble(tela.input());
		// Duas formas de receber o valor e converter
		
		// 3. Cálculo (PROCESSAMENTO)
		resultado = valor1 + valor2;
		
		// 4. Mostra o resultado
		tela.output(resultado);
		
		// Visibilidade (Public e Private)
		tela.tamanho = 5.5;
		tela.marca = "Xiaomi"; // Não pode ser acessado porque está Private
		
		tela.output(tela.tamanho);
	}
}
