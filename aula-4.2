import javax.swing.JOptionPane;

public class Pessoa {

	// Atributos da Classe (variáveis)
	public String nome;
	public int idade;
	public String email;
	
	// Métodos (ações)
	public void falar(String mensagem) {
		// Mostra uma mensagem de boas-vindas
		System.out.println(mensagem);
		
		// JOptionPane
		JOptionPane.showMessageDialog(null, mensagem);
	}
	
	public String comer() {
		// Pergunta o que a pessoa comeu
		return JOptionPane.showInputDialog("O que tu comeu no almoço?");
	}
}



public class Main {

	public static void main(String[] args) {
		// Cria um objeto da classe Pessoa
		Pessoa p = new Pessoa();
		
		// Preenche os dados da pessoa
		p.nome = "Marnei";
		p.idade = 43;
		p.email = "prof.marneicardoso@gmail.com";
		
		// Mostra a mensagem de boas-vindas
		p.falar("Bem-vindo(a) " + p.nome);
		p.falar("E-mail: " + p.email);
		p.falar("Idade: " + p.idade);
		
		// Cria uma variável para receber a resposta
		String comida = p.comer();
		
		// Mostra a resposta
		p.falar("Almoço: " + comida);
	}
}
