
/*
Trabalho 1 - Exerc. 8

Considerando que, para um consórcio, sabe-se o número total de prestações,
a quantidade de prestações pagas e o valor da prestação (fixa),
escreva um algoritmo que mostre o saldo devedor do cliente.
*/

public class Main {

	public static void main(String[] args) {
		Consorcio consorcio = new Consorcio();
		consorcio.mostrarSaldoDevedor();
	}
}



import javax.swing.JOptionPane;

public class Tela {

	public String receberDado(String mensagem) {
		return JOptionPane.showInputDialog(mensagem);
	}
	
	public void mostrarMensagem(String mensagem) {
		JOptionPane.showMessageDialog(null, mensagem);
	}
}



public class Consorcio {
	
	// Métodos
	public void mostrarSaldoDevedor() {
		Tela tela = new Tela();
		String valor = tela.receberDado("Informe o número total de parcelas");
		int numeroTotalParcelas = Integer.parseInt(valor);
		
		valor = tela.receberDado("Informe a quantidade de parcelas pagas");
		int quantidadeParcelasPagas = Integer.parseInt(valor);
		
		valor = tela.receberDado("informe o valor da parcela");
		double valorParcela = Double.parseDouble(valor);
		
		// Valor total do consórcio
		Double valorTotalConsorcio = valorParcela * numeroTotalParcelas;
		Double valorTotalPago = quantidadeParcelasPagas * valorParcela;
		Double saldoDevedor = valorTotalConsorcio - valorTotalPago;
		
		tela.mostrarMensagem("O saldo devedor é R$ " + saldoDevedor);
	}
}
