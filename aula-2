CÓDIGOS JAVA

public class PrimeiroAppJava {

	public static void main(String[] args) {

		/*
		 * O que são variáveis?
		 * 
		 * Um espaço reservado na memória para guardar valores temporários.
		 */

		// Variáveis em Java

		// Como declarar uma variável
		// TIPO NOME VALOR
		int num1 = 3;
		int num2 = 5;

		int soma;

		soma = num1 + num2;
		
		System.out.println(soma);

		// Formatar o código: Ctrl + Shift + F
		
		/* TIPOS PRIMITIVOS
			int		== Inteiro	(5, 3, 23)
			double	== Decimal	(0.25, 1.75)
			char	== Caracter	('a', 'A', 'm')
			bool	== Booleano	(true, false)
		*/
		
		/* TIPO WRAPPER (são Classes)
		 	Integer == Inteiro	(5, 3, 23)
		 	Double	== Decimal	(0.25, 1.75)
		 	String	== Cadeia de Caracteres (texto)	("a", "Ana", "m", "Maria, 52")
		 	Boolean	== Booleano	(true, false)
		*/
		
		boolean ligado = true;
		int numero = 23;
		double valor = 2.15;
		String nome = "Marnei";
		
		// Convertendo um texto em número
		String numeroEmTexto = "5";
		int numero1 = Integer.parseInt(numeroEmTexto);
		int numero2 = 16;
		
		soma = numero1 + numero2;
		
		System.out.println("O resultado da soma é: " + soma);
		// Atalho para o System.out.println() é syso (Ctrl + Espaço)
	}
}



